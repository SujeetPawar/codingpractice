Selection Sort 1st attempt
//solution
void selectionSort(int arr[], int n)

    {

       for(int i=0; i<n-1; i++) {

            int minElement = i;

            for(int j=i+1; j<n; j++) {

                if(arr[j] < arr[minElement]) {

                    minElement = j;

                }

            }

            swap(arr[minElement], arr[i]);

        }

    }
